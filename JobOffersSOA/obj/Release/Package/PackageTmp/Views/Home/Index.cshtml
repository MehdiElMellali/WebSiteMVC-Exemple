@model IEnumerable<JobOffersSOA.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
<div class="jumbotron">
    <h2>All jobs with categories</h2>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
@foreach (var item in Model)
{

    <div class="row toggle" id="dropdown-detail-1" data-toggle="detail-@Html.DisplayFor(model => item.Id)">
        <div class="alert alert-success" role="alert">
            <h4> @Html.DisplayFor(model => item.CategoryName)</h4>
        </div>
    </div>
  
<div class="container">
    <div class="row">
        <div class="col-md-12">
        @foreach (var subItem in item.jobs)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                  <img src="~/Uploads/@Html.DisplayFor(model => subItem.JobImage)" class="img-responsive">
                    <div class="caption">
                        <div class="row">
                            <div class="col-md-6 col-xs-6">
                                <h3>@Html.DisplayFor(model => subItem.JobTitle)</h3>
                            </div>
                            <div class="col-md-6 col-xs-6 price">
                                <h3>
                                  
                                </h3>
                            </div>
                        </div>
                        <p>@Html.DisplayFor(model => subItem.JobContent)</p>
                        <div class="row">
                            <div class="col-md-6">
                                @Html.ActionLink("Read More", "Details", new { jobId = item.Id }, new { @class = "btn btn-primary  btn-product" })
                            </div>
                        </div>
                        <p> </p>
                    </div>
                </div>
            </div>
    }
        </div>
    </div>
</div>



}











