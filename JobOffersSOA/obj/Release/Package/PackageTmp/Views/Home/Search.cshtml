@model IEnumerable<JobOffersSOA.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="row toggle" id="dropdown-detail-1">
    <div class="alert alert-success" role="alert">
        <h4> Result search</h4>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @foreach (var subItem in Model)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="~/Uploads/@Html.DisplayFor(model => subItem.JobImage)" class="img-responsive">
                        <div class="caption">
                            <div class="row">
                                <div class="col-md-6 col-xs-6">
                                    <h3>@Html.DisplayFor(model => subItem.JobTitle)</h3>
                                </div>
                                <div class="col-md-6 col-xs-6 price">
                                    <h3></h3>
                                </div>
                            </div>
                            <p>@Html.DisplayFor(model => subItem.JobContent)</p>
                            <div class="row">
                                <div class="col-md-6">
                                    @Html.ActionLink("Read More", "Details", new { jobId = subItem.Id }, new { @class = "btn btn-primary  btn-product" })
                                </div>
                            </div>
                            <p> </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

